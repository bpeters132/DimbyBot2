# .env file used for development purposes
# Environment variables for production are defined in the GitLab CI/CD variables
###########################

# Discord Bot Credentials
BOT_TOKEN=your_bot_token_here
CLIENT_ID=
GUILD_ID= # Optional: For development/testing guild commands
OWNER_ID=

# Bot Settings
DEV_MODE= # YES/NO
LOG_LEVEL=info
# Options: error, warn, info, debug

# Other Credentials (if used by bot features)
EMAIL_USER=
EMAIL_PASS=
GITLAB_EMAIL=

# Lavalink Configuration
LAVALINK_HOST=lavalink # Should match the service name in docker-compose.yml
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass # CHANGE THIS!
LAVALINK_NODE_ID=mainNode
LAVALINK_SECURE=false # Set to true if using SSL

# Lavalink Optional Features (YouTube POT - see https://github.com/iv-org/youtube-trusted-session-generator)
LAVALINK_YOUTUBE_POT_TOKEN=
LAVALINK_YOUTUBE_POT_VISITORDATA=

# Lavalink Optional Features (Spotify - requires client ID/secret)
LAVALINK_SPOTIFY_ENABLED=true
LAVALINK_SPOTIFY_CLIENT_ID=
LAVALINK_SPOTIFY_CLIENT_SECRET=
LAVALINK_SPOTIFY_COUNTRY_CODE=US
LAVALINK_SPOTIFY_PLAYLIST_LOAD_LIMIT=6
LAVALINK_SPOTIFY_ALBUM_LOAD_LIMIT=6

# Discord Bot Configuration
BOT_TOKEN=your_bot_token_here

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# Error Monitoring Configuration
ALERT_CHANNEL_ID=your_alert_channel_id_here
ERROR_THRESHOLD=10
ERROR_COOLDOWN_MINUTES=15

# Admin Web Server Configuration
ENABLE_ADMIN_SERVER=true
ADMIN_PORT=3000
SESSION_SECRET=your_secure_session_secret_here

# Discord OAuth2 for Admin Authentication
DISCORD_CLIENT_ID=your_discord_app_client_id
DISCORD_CLIENT_SECRET=your_discord_app_client_secret

# Admin User IDs (comma-separated list of Discord user IDs that can access the admin panel)
ADMIN_USER_IDS=your_discord_user_id,another_admin_user_id

# Disable authentication for admin panel (NOT RECOMMENDED for production)
# ADMIN_DISABLE_AUTH=false

# Database Configuration (if applicable)
# DATABASE_URL=your_database_url_here

# Other Bot Settings
NODE_ENV=development